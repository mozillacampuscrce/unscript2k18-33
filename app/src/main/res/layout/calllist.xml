<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:paddingBottom="2dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:paddingTop="2dp"
        app:cardElevation="3dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">


            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="4dp"
                android:paddingEnd="18dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:text="Item Name"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:gravity="right"
                android:layout_toEndOf="@+id/item_name"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/bcall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="right"
                    android:paddingBottom="8dp"
                    android:paddingEnd="8dp"
                    android:background="@drawable/ic_phone_black_24dp"
                    android:paddingStart="8dp"
                    android:paddingTop="4dp"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/bemail"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignBaseline="@+id/item_name"
                    android:layout_alignBottom="@+id/item_name"
                    android:layout_alignParentEnd="true"
                    android:gravity="right"
                    android:paddingBottom="8dp"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="4dp"
                    android:background="@drawable/ic_email_black_24dp"
                    android:textSize="30sp" />
            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>